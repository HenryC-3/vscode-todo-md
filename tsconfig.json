{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"outDir": "out",
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"ES2019",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"src/*": [
			  "./src/*"
			]
		},
		"types": [
			"node",
			"mocha",
			"chai"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"scripts",
		"media"
	]
}
