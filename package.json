{
	"name": "todo-md",
	"displayName": "Todo Markdown",
	"description": "Todo ... something something based on todo.txt format.",
	"version": "0.0.4",
	"publisher": "usernamehw",
	"license": "MIT",
	"icon": "img/icon.png",
	"engines": {
		"vscode": "^1.42.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/usernamehw/vscode-todo-md"
	},
	"galleryBanner": {
		"theme": "dark",
		"color": "#333333"
	},
	"bugs": {
		"url": "https://github.com/usernamehw/vscode-todo-md/issues"
	},
	"keywords": [
		"todotxt",
		"todo",
		"todos",
		"task",
		"tasks",
		"gtd",
		"markdown",
		"plaintext"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension",
	"preview": true,
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Todo Markdown",
			"properties": {
				"todomd.defaultFile": {
					"type": "string",
					"markdownDescription": "Absolute path to file that Tree Views or commands use when no editor is open that matches `activatePattern`",
					"default": ""
				},
				"todomd.defaultArchiveFile": {
					"type": "string",
					"markdownDescription": "Absolute path to file that all archived tasks will be moved to",
					"default": ""
				},
				"todomd.autoArchiveTasks": {
					"type": "boolean",
					"markdownDescription": "When enabled - will move completed tasks automatically (when `toggleDone` command runs).",
					"default": false
				},
				"todomd.activatePattern": {
					"type": "string",
					"markdownDescription": "Choose files that extension will operate on. By default activated on 2 files (todo.md & todo.archive.md). This format is called `Glob`. Examples:\n\nActivate on any (.txt) file - `**/*.txt`.\n\nActivate only on single file (todo.txt) - `**/todo.txt`\n\nActivate on 2 files (todo.txt or task.txt) - `**/{todo,task}.txt`",
					"default": "**/{todo,todo.archive}.md"
				},
				"todomd.doneSymbol": {
					"type": "string",
					"default": "x "
				},
				"todomd.sortTagsView": {
					"type": "string",
					"enum": [
						"alphabetic",
						"frequency"
					],
					"default": "frequency"
				},
				"todomd.tags": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Tags added to autocomplete.",
					"default": []
				},
				"todomd.projects": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Projects added to autocomplete.",
					"default": []
				},
				"todomd.contexts": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Contexts added to autocomplete.",
					"default": []
				},
				"todomd.addCompletionDate": {
					"type": "boolean",
					"markdownDescription": "When completing a task add completion date to it: `{cm:2020-04-30}`",
					"default": false
				},
				"todomd.useLocalDateTime": {
					"type": "boolean",
					"markdownDescription": "Calculate offset from UTC to use local date/time.",
					"default": true
				}
			}
		},
		"commands": [
			{
				"command": "todomd.toggleDone",
				"title": "Toggle Done (Completion)",
				"category": "Todo MD",
				"icon": {
					"light": "img/checkLight.svg",
					"dark": "img/checkDark.svg"
				}
			},
			{
				"command": "todomd.addTask",
				"title": "Add Task",
				"category": "Todo MD"
			},
			{
				"command": "todomd.sortByPriority",
				"title": "Sort by priority",
				"category": "Todo MD"
			},
			{
				"command": "todomd.archiveCompletedTasks",
				"title": "Archive completed Tasks",
				"category": "Todo MD"
			},
			{
				"command": "todomd.openDefaultArvhiveFile",
				"title": "Open default archive file",
				"category": "Todo MD"
			},
			{
				"command": "todomd.completeTask",
				"title": "Complete task",
				"category": "Todo MD"
			},
			{
				"command": "todomd.getNextTask",
				"title": "Get next task",
				"category": "Todo MD"
			},
			{
				"command": "todomd.applyFilter",
				"title": "Apply Filter",
				"category": "Todo MD"
			},
			{
				"command": "todomd.clearGlobalState",
				"title": "Clear global state",
				"category": "Todo MD"
			},
			{
				"command": "todomd.resetAllRecurringTasks",
				"title": "Reset all Recurring tasks",
				"category": "Todo MD"
			},
			{
				"command": "todomd.insertTodayDate",
				"title": "Insert today date (ISO)",
				"category": "Todo MD"
			}
		],
		"keybindings": [
			{
				"command": "todomd.toggleDone",
				"key": "Alt+D",
				"when": "editorTextFocus"
			}
		],
		"colors": [
			{
				"id": "todomd.commentForeground",
				"defaults": {
					"light": "#b4b4b4",
					"dark": "#b4b4b4",
					"highContrast": "#b4b4b4"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.priority1Foreground",
				"defaults": {
					"light": "#eb847e",
					"dark": "#eb847e",
					"highContrast": "#eb847e"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.priority2Foreground",
				"defaults": {
					"light": "#ffb648",
					"dark": "#e9b972",
					"highContrast": "#e9b972"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.priority3Foreground",
				"defaults": {
					"light": "#d4c12b",
					"dark": "#e9db73",
					"highContrast": "#e9db73"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.priority4Foreground",
				"defaults": {
					"light": "#bad62e",
					"dark": "#d4e67f",
					"highContrast": "#d4e67f"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.priority5Foreground",
				"defaults": {
					"light": "#55d65b",
					"dark": "#87e28c",
					"highContrast": "#87e28c"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.tagForeground",
				"defaults": {
					"light": "#029cdf",
					"dark": "#1abaff",
					"highContrast": "#1abaff"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.contextForeground",
				"defaults": {
					"light": "#7284eb",
					"dark": "#7284eb",
					"highContrast": "#7284eb"
				},
				"description": "Not empty"
			},
			{
				"id": "todomd.specialTagForeground",
				"defaults": {
