		"ts-loader": "^7.0.3",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-strip-block": "^0.2.0"
	},
	"dependencies": {
